<Window x:Class="ScenarioCustom.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScenarioCustom"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical">

        <StackPanel Orientation="Horizontal">
            <Label Content="Niveau de luminosité dans la pièce A :" />
            <Label Content="0" x:Name="labelLuminosite"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <Label Content="Allumage automatique :" />
            <Label Content="..." x:Name="labelSwitchAllumage"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <CheckBox x:Name="switchAllumage"  Content="Activer l'allumage automatique"/>
        </StackPanel>
       

    </StackPanel>
</Window>
